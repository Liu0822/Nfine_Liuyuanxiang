@{
    ViewBag.Title = "我的公告Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    var editor = null;
    $(function () {
        //Kind编辑器
        KindEditor.ready(function (K) {
            var options = {
                uploadJson: '/scripts/kindeditor/asp.net/upload_json.ashx',
                fileManagerJson: '/scripts/kindeditor/asp.net/file_manager_json.ashx',
                allowFileManager: true
            };
            window.editor = K.create('#Contents', options);
        });    


    })
    //新增保存
    function submitForm() {
        //验证文本框
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $('#form1').formSerialize();
        postData["Contents"] = editor.html();
        $.submitForm({
            url: "/ExampleManage/MyAnnouncement/AddAnnouncement?keyValue=" + keyValue,
            param: postData,
            success: function () {
                $.currentWindow().$("#gridList").resetSelection();
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
<form id="form1">
    <div class="mail-box">
        <div class="mail-body">
            <table class="form">
                <tr>
                    <th class="formTitle">标题</th>
                    <td class="formValue">
                        <div class="mail-body" style="padding: 0px;">
                            <input id="Title" name="Title" type="text" class="form-control required" />
                        </div>
                    </td>
                </tr>           
                <tr>
                    <th class="formTitle">类别</th>
                    <td class="formValue">
                        <div class="mail-body" style="padding: 0px;">                          
                            <select data-live-search="true" class="dropdown-toggle selectList-select form-control change-table" id="Category" name="Category">
                                <option value="0">==请选择==</option>
                                <option value="1">会议通知</option>
                                <option value="2">活动公告</option>
                            </select>
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">内容</th>
                    <td class="formValue">
                        <div class="mail-body" style="padding: 0px;">
                            <input id="Contents" name="Centents" type="text" class="form-control required" style="height:400px;" />
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>