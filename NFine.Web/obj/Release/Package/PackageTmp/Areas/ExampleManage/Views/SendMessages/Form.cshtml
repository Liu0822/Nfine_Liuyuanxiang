    //            url: "/ExampleManage/SendMessages/GetFormJson",
    //            data: { keyValue: keyValue },
    //            dataType: "json",
    //            async: false,
    //            success: function (data) {
    //                $("#form1").formSerialize(data);
    //            }
    //        });
    //    }
    //});  
    //下拉获取数据
    function select() {
            $.ajax({
                url: "/ClientsData/GetProjInfoData",
                type: 'post',
                dataType: 'json',
                success: function (data) {
                    var data = data.DataSource;
                    for (var i = 0; i < data.length; i++) {
                        $("#MyRecordID").append("<option value='" + data[i].id + "'>" + data[i].value + "</option>");
                    }
                }
            })
        }
            //新增保存
            function submitForm() {
                //验证文本框
                if (!$('#form1').formValid()) {
                    return false;
                }
                $.submitForm({
                    url: "/ExampleManage/SendMessages/InsertNotice?keyValue=" + keyValue,
                    param: $("#form1").formSerialize(),
                    success: function () {
                        $.currentWindow().$("#gridList").resetSelection();
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
</script>
<form id="form1">
    <div class="mail-box">
        <div class="mail-body">
            <table class="form">
                <tr>
                    <th class="formTitle">L_MyRecordID</th>
                    <td class="formValue">
                        <select class="form-control" id="MyRecordID" name="cRoleName">
                            <option>--请选择--</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">输入框</th>
                    <td class="formValue">
                        <div class="mail-body" style="padding: 0px;">
                            <input id="L_Title" name="L_Title" type="text" class="form-control required" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">文本域</th>
                    <td class="formValue">
                        <div class="mail-body" style="padding: 0px;">
                            <textarea id="L_Centent" name="L_Centent" class="form-control" rows="5" style="height:500px;"></textarea>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>