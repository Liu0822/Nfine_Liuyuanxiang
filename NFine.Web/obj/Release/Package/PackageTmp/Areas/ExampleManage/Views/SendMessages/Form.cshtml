@{
    ViewBag.Title = "从表Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<link href="~/Content/js/layer/layui/css/layui.css" rel="stylesheet" />
<script src="~/Content/js/layer/layui/layui.js"></script>
<script>
    var keyValue = $.request("keyValue");
    var editor = null;
    $(function () {
        //Kind编辑器
        KindEditor.ready(function (K) {
            var options = {
                uploadJson: '/scripts/kindeditor/asp.net/upload_json.ashx',
                fileManagerJson: '/scripts/kindeditor/asp.net/file_manager_json.ashx',
                allowFileManager: true
            };
            window.editor = K.create('#L_Centent', options);
        });        


        select();
        initControl(); 
    });
    //change事件，获取下拉数据赋值文本框
    function initControl() {
        $("#MyRecordID").change(function () {
            var a = $(this).val();
            $.ajax({
                //url: "/ExampleManage/SendMessages/GetFormJson?keyValue=" + a,
                url: "/ExampleManage/MyRecord/GetVoidMyRecordEntity?keyValue=" + a,
                type: 'get',
                success: function (data) {
                    var a = JSON.parse(data);
                    console.log(a);
                        $("#L_Centent").val(a.L_Centent);
                }
            })
        })
    }
