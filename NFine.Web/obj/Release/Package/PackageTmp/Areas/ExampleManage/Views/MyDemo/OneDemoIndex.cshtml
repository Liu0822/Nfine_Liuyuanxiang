@{
    ViewBag.Title = "OneDemoIndex";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function () {
        gridList();
        initControl();
    })
    //列表
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            treeGrid: true,
            url: '/ExampleManage/MyDemo/GetTreeJson',
     //       height: $(window).height() - 96,
            colModel: [
                { label: "主键", name: "F_Id", hidden: true, key: true },
                { label: '父级ID', name: 'ParentId', width: 250, align: 'left' },
                { label: '内容', name: 'Code', width: 500, align: 'left' },
            ]
        })
    }
    //新增测试内容
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增",
            url: "/ExampleManage/MyDemo/OneDemoForm",
            width: '800px',
            height: '500px',
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function initControl() {
        $("#rootUL").bindSelect({
            url: "/ExampleManage/MyDemo/GetTreeSelectJson",
        });
    }
</script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
